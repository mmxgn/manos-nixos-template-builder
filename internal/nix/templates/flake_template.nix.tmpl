{
  description = "{{ .Description }}";

  inputs = {
    nixpkgs.url = "{{ .NixpkgsURL }}";
    flake-utils.url = "github:numtide/flake-utils";
  };

  outputs = { self, nixpkgs, flake-utils }:
    flake-utils.lib.eachDefaultSystem (system:
      let
        pkgs = import nixpkgs {
          inherit system;
          config.allowUnfree = true;  # Allow unfree packages (CUDA, etc.)
        };
      in
      {
        {{- if .UseFHS }}
        devShells.default = (pkgs.buildFHSEnv {
          name = "dev-env";
          targetPkgs = pkgs: with pkgs; [
            {{- range .Packages }}
            {{ . }}
            {{- end }}
          ];

          profile = ''
            echo "Development environment loaded."
            echo "Packages: {{ join .Packages ", " }}"
            {{- if .EnvVars }}
            # Environment variables
            {{- range .EnvVars }}
            export {{ . }}=""
            {{- end }}
            {{- end }}
            {{- if .HasPyPI }}
            echo ""
            echo "Installing PyPI packages..."
            pip install --quiet {{ join .PyPIPackages " " }}
            echo "PyPI packages installed: {{ join .PyPIPackages ", " }}"
            {{- end }}
          '';
        }).env;
        {{- else }}
        devShells.default = pkgs.mkShell {
          buildInputs = with pkgs; [
            {{- range .Packages }}
            {{ . }}
            {{- end }}
          ];
          {{- if .EnvVars }}

          # Environment variables (empty by default â€” fill in as needed)
          {{- range .EnvVars }}
          {{ . }} = "";
          {{- end }}
          {{- end }}

          shellHook = ''
            echo "Development environment loaded."
            echo "Packages: {{ join .Packages ", " }}"
            {{- if .HasPyPI }}
            echo ""
            echo "Installing PyPI packages..."
            pip install --quiet {{ join .PyPIPackages " " }}
            echo "PyPI packages installed: {{ join .PyPIPackages ", " }}"
            {{- end }}
          '';
        };
        {{- end }}

        # Example package definition (customize for your project)
        # Uncomment and modify as needed:
        # packages.default = pkgs.buildGoModule {  # or buildPythonPackage, etc.
        #   pname = "my-app";
        #   version = "0.1.0";
        #   src = ./.;
        #   # Add build-specific configuration here
        # };
      }
    );
}
